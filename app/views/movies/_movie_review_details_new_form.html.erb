<!-- Form review_detail start -->
<%= form_with(model: @review_detail, local: true) do |f| %>
<!-- Form review_detail end -->

  <!-- Label and input for review_id start -->
  <!-- Input for review_id start -->
  <%= f.hidden_field :review_id, value: @movie.id %>
  <!-- Input for review_id end -->
  <!-- Label and input for review_id end -->

  <!-- Label and input for review start -->
  <div class="form-group">
    <%= f.label :review %>

    <!-- Input for review start -->
    <%= f.text_field :review, class: "form-control" %>
    <!-- Input for review end -->
  </div>
  <!-- Label and input for review end -->

  <!-- Label and input for star_ratings start -->
  <div class="form-group">
    <%= f.label :star_ratings %>

    <!-- Input for star_ratings start -->
    <%= f.text_field :star_ratings, class: "form-control" %>
    <!-- Input for star_ratings end -->
  </div>
  <!-- Label and input for star_ratings end -->

  <%= f.submit "Create review detail", class: "btn btn-block btn-outline-secondary" %>
<% end %>
