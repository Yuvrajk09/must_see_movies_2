<div class="card mb-3">
  <h2 class="card-header h4">
    Review Detail #<%= review_detail.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Movie</dt>
      <dd>
        <% if @review_detail.movie.present? %>
          <%= link_to review_detail.movie, review_detail.movie %>
        <% end %>
      </dd>

      <dt>Review</dt>
      <dd><%= review_detail.review %></dd>

      <dt>Star ratings</dt>
      <dd><%= review_detail.star_ratings %></dd>

      <dt>User</dt>
      <dd>
        <% if @review_detail.user.present? %>
          <%= link_to review_detail.user, review_detail.user %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back review_detail, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_review_detail_url(review_detail), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to review_detail, method: :delete, data: { confirm: "Do you really want to delete this review_detail?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(review_detail.updated_at) %> ago
  </div>
</div>
