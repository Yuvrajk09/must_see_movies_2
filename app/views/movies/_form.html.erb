      <% movie.errors.full_messages_for(:movie_duration).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% movie_year_class = "form-control" %>
    <% movie_year_was_invalid = movie.errors.include?(:movie_year) %>

    <% if was_validated %>
      <% if movie_year_was_invalid %>
        <% movie_year_class << " is-invalid" %>
      <% else %>
        <% movie_year_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :movie_year %>
    <%= f.text_field :movie_year, class: movie_year_class, placeholder: "Enter movie year" %>
    <% if movie_year_was_invalid %>
      <% movie.errors.full_messages_for(:movie_year).each do |message| %>
        <div class="invalid-feedback d-flex">
