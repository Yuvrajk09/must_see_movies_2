<% was_validated = movie.errors.any? %>

<%= form_with(model: movie, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = movie.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <%= f.number_field :user_id, class: user_class, placeholder: "Enter user" %>
    <% if user_was_invalid %>
      <% movie.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% movie_name_class = "form-control" %>
    <% movie_name_was_invalid = movie.errors.include?(:movie_name) %>

    <% if was_validated %>
      <% if movie_name_was_invalid %>
        <% movie_name_class << " is-invalid" %>
      <% else %>
        <% movie_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :movie_name %>
    <%= f.text_field :movie_name, class: movie_name_class, placeholder: "Enter movie name" %>
    <% if movie_name_was_invalid %>
      <% movie.errors.full_messages_for(:movie_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% movie_description_class = "form-control" %>
