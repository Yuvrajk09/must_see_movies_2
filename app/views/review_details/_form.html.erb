<% was_validated = review_detail.errors.any? %>

<%= form_with(model: review_detail, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% review_class = "form-control" %>
    <% review_was_invalid = review_detail.errors.include?(:review) %>

    <% if was_validated %>
      <% if review_was_invalid %>
        <% review_class << " is-invalid" %>
      <% else %>
        <% review_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :review_id %>
    <%= f.collection_select :review_id, Movie.all, :id, :to_s, {}, class: "form-control" %>
    <% if review_was_invalid %>
      <% review_detail.errors.full_messages_for(:review).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% review_class = "form-control" %>
    <% review_was_invalid = review_detail.errors.include?(:review) %>

    <% if was_validated %>
      <% if review_was_invalid %>
        <% review_class << " is-invalid" %>
      <% else %>
        <% review_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :review %>
    <%= f.text_field :review, class: review_class, placeholder: "Enter review" %>
    <% if review_was_invalid %>
      <% review_detail.errors.full_messages_for(:review).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% star_rating_class = "form-control" %>
    <% star_rating_was_invalid = review_detail.errors.include?(:star_rating) %>

    <% if was_validated %>
      <% if star_rating_was_invalid %>
        <% star_rating_class << " is-invalid" %>
      <% else %>
        <% star_rating_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :star_ratings %>
    <%= f.text_field :star_ratings, class: star_rating_class, placeholder: "Enter star rating" %>
    <% if star_rating_was_invalid %>
      <% review_detail.errors.full_messages_for(:star_rating).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
