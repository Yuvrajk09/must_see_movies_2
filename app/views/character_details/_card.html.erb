<div class="card mb-3">
  <h2 class="card-header h4">
    Character Detail #<%= character_detail.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Movie</dt>
      <dd>
        <% if @character_detail.movie.present? %>
          <%= link_to character_detail.movie, character_detail.movie %>
        <% end %>
      </dd>

      <dt>Actor</dt>
      <dd>
        <% if @character_detail.actor.present? %>
          <%= link_to character_detail.actor, character_detail.actor %>
        <% end %>
      </dd>

      <dt>Character name</dt>
      <dd><%= character_detail.character_name %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back character_detail, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_character_detail_url(character_detail), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to character_detail, method: :delete, data: { confirm: "Do you really want to delete this character_detail?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(character_detail.updated_at) %> ago
  </div>
</div>
