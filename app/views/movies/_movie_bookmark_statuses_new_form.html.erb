<!-- Form bookmark_status end -->

  <!-- Label and input for bookmark_id start -->
  <!-- Input for bookmark_id start -->
  <%= f.hidden_field :bookmark_id, value: @movie.id %>
  <!-- Input for bookmark_id end -->
  <!-- Label and input for bookmark_id end -->

  <!-- Label and input for bookmark_status start -->
  <div class="form-group">
    <%= f.label :bookmark_status %>

