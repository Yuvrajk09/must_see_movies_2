<% was_validated = bookmark_status.errors.any? %>

<%= form_with(model: bookmark_status, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% movie_class = "form-control" %>
    <% movie_was_invalid = bookmark_status.errors.include?(:movie) %>

    <% if was_validated %>
      <% if movie_was_invalid %>
        <% movie_class << " is-invalid" %>
      <% else %>
        <% movie_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :movie_id %>
    <%= f.collection_select :movie_id, Movie.all, :id, :to_s, {}, class: "form-control" %>
    <% if movie_was_invalid %>
      <% bookmark_status.errors.full_messages_for(:movie).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% bookmark_status_class = "form-control" %>
    <% bookmark_status_was_invalid = bookmark_status.errors.include?(:bookmark_status) %>

    <% if was_validated %>
      <% if bookmark_status_was_invalid %>
        <% bookmark_status_class << " is-invalid" %>
      <% else %>
        <% bookmark_status_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :bookmark_status %>
    <%= f.text_field :bookmark_status, class: bookmark_status_class, placeholder: "Enter bookmark status" %>
    <% if bookmark_status_was_invalid %>
      <% bookmark_status.errors.full_messages_for(:bookmark_status).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = bookmark_status.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <%= f.collection_select :user_id, UserDetail.all, :id, :to_s, {}, class: "form-control" %>
    <% if user_was_invalid %>
      <% bookmark_status.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
