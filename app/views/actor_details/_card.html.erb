<div class="card mb-3">
  <h2 class="card-header h4">
    Actor Detail #<%= actor_detail.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Actor</dt>
      <!-- Display actor_id start -->
      <dd><%= actor_detail.actor_id %></dd>
      <!-- Display actor_id end -->

      <dt>Actor name</dt>
      <!-- Display actor_name start -->
      <dd><%= actor_detail.actor_name %></dd>
      <!-- Display actor_name end -->

      <dt>Actor dob</dt>
      <!-- Display actor_dob start -->
      <dd><%= actor_detail.actor_dob %></dd>
      <!-- Display actor_dob end -->

      <dt>Actor bio</dt>
      <!-- Display actor_bio start -->
      <dd><%= actor_detail.actor_bio %></dd>
      <!-- Display actor_bio end -->

      <dt>Actor image</dt>
      <!-- Display actor_image start -->
      <dd><%= actor_detail.actor_image %></dd>
      <!-- Display actor_image end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back actor_detail, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link actor_detail start -->
      <div class="col">
        <%= link_to edit_actor_detail_url(actor_detail), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link actor_detail end -->

      <!-- Delete link actor_detail start -->
      <div class="col">
        <%= link_to actor_detail, method: :delete, data: { confirm: "Do you really want to delete this actor_detail?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link actor_detail end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(actor_detail.updated_at) %> ago
  </div>
</div>
